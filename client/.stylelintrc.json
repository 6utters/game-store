{
"extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "rules": {
    "selector-class-pattern": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": null
  }
}
